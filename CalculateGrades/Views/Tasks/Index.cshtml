@model List<Tasks>
<html dir="rtl">
<div class="row pt-4 pb-3">
    <div class="col-6">
        <h2>רשימת משימות</h2>
    </div>
    <div class="col-6 text-start">
        <a asp-controller="Tasks" asp-action="Create" class="btn btn-primary">
            הוספת משימה <i class="bi bi-plus-circle"></i>
        </a>
    </div>


</div>

<table class="table table-bordered table-striped">
    <tr>
        <th>
            משימה
        </th>
    </tr>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.TaskName
                </td>
                <td>
                    <div class="w-25 btn-group" role="group">
                        <a asp-controller="" asp-action=""
                       class="btn btn-primary mx-2">
                            עריכת משימה <i class="bi bi-pencil-square"></i>
                        </a>
                    </div>
                    <div class="w-25 btn-group text-start" role="group">
                        <a asp-controller="" asp-action=""
                       class="btn btn-danger mx-2">
                            מחיקת משימה <i class="bi bi-trash3"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</html>