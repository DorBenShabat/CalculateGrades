@model CalculateGrades.ViewModels.CourseDeatilViewModel

<div class="container">
    <html dir="rtl">
    <h1>@Model.CourseName - פרטי הקורס</h1>
   

    <h2>מטלות</h2>
    <div class="form-group text-start">
        <a asp-controller="Tasks" asp-action="Create" asp-route-courseNum="@Model.CourseNum" class="btn btn-primary" role="button">הוסף מטלה</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>שם מטלה</th>
                <th>ציון</th>
                <th>אחוז מציון סופי</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model.Tasks)
            {
                <tr>
                    <td>@task.TaskName</td>
                    <td>@task.Grade</td>
                    <td>@task.PercentageOfFinalGrade</td>
                    <td>
                        <div class="w-25 btn-group" role="group">
                            <a asp-controller="" asp-action=""
                           class="btn btn-primary mx-2">
                                עריכת משימה <i class="bi bi-pencil-square"></i>
                            </a>
                        </div>
                        <div class="w-25 btn-group text-start" role="group">
                            <a asp-controller="" asp-action=""
                           class="btn btn-danger mx-2">
                                מחיקת משימה <i class="bi bi-trash3"></i>
                            </a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>

   

</html>
</div>
